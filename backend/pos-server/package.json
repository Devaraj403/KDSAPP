
{
  "name": "pos-server",
  "version": "1.0.0",
  "description": "POS Server (Electron + Node.js + Socket.IO + Bonjour)",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "server": "tsx src/server.ts",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsx watch src/server.ts\" \"npm run build && electron .\"",
    "dev:server": "tsx watch src/server.ts"
  },
  "keywords": [
    "POS",
    "Electron",
    "Socket.IO",
    "Express",
    "KDS"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "express": "^5.2.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "concurrently": "^9.0.0",
    "electron": "^38.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
